                            android:layout_marginTop="2dp"
                            android:text="开奖提醒"
                            android:textColor="@color/gray_txt"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lzc_notice"
                        android:layout_width="60dp"
                        android:layout_height="26dp"
