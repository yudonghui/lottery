<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.lotteryactivity.BillRecordDetailActivity">
    <View
        android:background="@color/gray_bg"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <TextView
        android:id="@+id/bill_detail_title"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/deep_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bill_detail_date"
            android:gravity="center_vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:textSize="@dimen/sp_12"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/bill_detail_money"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:background="@color/gray_bg"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="流水号："
            android:layout_weight="1"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/deep_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/bill_detail_number"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/deep_txt"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="来源："
            android:layout_weight="1"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/deep_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/bill_detail_origin"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/deep_txt"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="@color/gray_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
