<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_redpacket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.lotteryactivity.redpacket.MyRedpacketActivity">
    <android.support.design.widget.TabLayout
        android:id="@+id/redpacket_tablayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabSelectedTextColor="@color/red_theme"
        app:tabTextColor="@color/gray_txt"
        app:tabTextAppearance="@style/tablayout_text"
        app:tabIndicatorColor="@color/red_theme"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_redpacket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
