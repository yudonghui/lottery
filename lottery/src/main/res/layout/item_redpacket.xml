<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/red_bg"
        android:layout_width="340dp"
        android:layout_height="115dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/redpacket_bg">

        <LinearLayout
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/red_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="125dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用规则："
                    android:textColor="@color/gray_txt"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/red_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消费满2000可用"
                    android:textColor="@color/deep_txt"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有效日期："
                    android:textColor="@color/gray_txt"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/red_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017.03.15-2017.04.15"
                    android:textColor="@color/deep_txt"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/red_status"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="3dp"
            android:src="@mipmap/usedbg"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>