<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date_issue"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="周四001 欧罗巴 03-17 23:00"
        android:textColor="@color/gray_txt"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_gray_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="莫火车头"
                android:textColor="@color/deep_txt"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/home_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@mipmap/home_team" />

            <TextView
                android:id="@+id/vs_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="VS"
                android:textColor="@color/deep_txt"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/guest_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@mipmap/guest_team" />

            <TextView
                android:id="@+id/guest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="莫火车头"
                android:textColor="@color/deep_txt"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <View style="@style/divider_style_height" />

        <RelativeLayout
            android:id="@+id/Rl_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_title"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_whitebg_gray"
                android:gravity="center"
                android:text="主胜"
                android:textColor="@color/deep_txt"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/ping_title"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_whitebg_gray"
                android:gravity="center"
                android:text="平"
                android:textColor="@color/deep_txt"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/guest_title"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_whitebg_gray"
                android:gravity="center"
                android:text="主负"
                android:textColor="@color/deep_txt"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/home_square"
                    android:layout_width="15dp"
                    android:gravity="center"
                    android:layout_height="15dp"
                    android:background="@drawable/shape_gray_forecast"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/home_odds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="主胜2.22"
                    android:textColor="@color/gray_txt"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/ping_square"
                    android:layout_width="15dp"
                    android:gravity="center"
                    android:layout_height="15dp"
                    android:background="@drawable/shape_gray_forecast"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/ping_odds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="平2.02"
                    android:textColor="@color/gray_txt"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/guest_square"
                    android:layout_width="15dp"
                    android:gravity="center"
                    android:layout_height="15dp"
                    android:background="@drawable/shape_gray_forecast"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/guest_odds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="主负1.62"
                    android:textColor="@color/gray_txt"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <com.daxiang.lottery.view.autotextview.AutofitTextView
            android:id="@+id/forecast_rate"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/forecast_circle"
            android:gravity="center"
            android:singleLine="true"
            android:text="75%"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <com.daxiang.lottery.view.autotextview.AutofitTextView
            android:id="@+id/forecast_rate_text"
            android:layout_width="55dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:layout_gravity="bottom"
            android:background="@mipmap/forecast_square"
            android:gravity="center"
            android:singleLine="true"
            android:text="预测概率"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />
    </FrameLayout>
</FrameLayout>