<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="horizontal">

    <!-- 投注组合 -->

    <LinearLayout
        android:id="@+id/lv_bet_combine"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:orientation="vertical">


    </LinearLayout>

    <!-- 每注奖金 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_per_bonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="10000.00"
            android:textColor="@color/deep_txt"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>

    <!-- 倍数 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_bonus_reduction"
            android:layout_width="0dp"
            android:layout_height="@dimen/heigh_title"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/bonus_reduction"
            android:onClick="onClickMinusTimes"/>

        <EditText
            android:id="@+id/edit_buy_times"
            android:layout_width="0dp"
            android:layout_height="@dimen/heigh_title"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.7"
            android:background="@drawable/shape_red_fang"
            android:ellipsize="middle"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:text="1"
            android:textColor="@color/deep_txt"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/sp_12"/>

        <Button
            android:id="@+id/btn_bonus_plus"
            android:layout_width="0dp"
            android:layout_height="@dimen/heigh_title"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/bonus_plus"
            android:onClick="onClickMinusTimes"/>
    </LinearLayout>

    <!-- 奖金 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_bonus_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="10000.00"
            android:textColor="@color/red_theme"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>

</LinearLayout>