<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HomeFragmentActivity">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <!-- <android.support.v4.view.ViewPager
         android:id="@+id/viewpager"
         android:layout_width="match_parent"
         android:layout_height="match_parent"/>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_box" />

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/radioGroup_heigh"
        android:background="@color/tab_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rbtn_home"
            style="@style/tab_style"
            android:src="@mipmap/tab_home_true" />

        <ImageView
            android:id="@+id/rbtn_score"
            style="@style/tab_style"
            android:src="@mipmap/tab_score_false" />
        <ImageView
            android:id="@+id/rbtn_recommend"
            style="@style/tab_style"
            android:visibility="gone"
            android:src="@mipmap/tab_recommend_false" />
        <ImageView
            android:id="@+id/rbtn_faxian"
            style="@style/tab_style"
            android:src="@mipmap/tab_wonderful_false" />

        <ImageView
            android:id="@+id/rbtn_lottery"
            style="@style/tab_style"
            android:src="@mipmap/tab_lottery_false" />
    </LinearLayout>

</LinearLayout>
